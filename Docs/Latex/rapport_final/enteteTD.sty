\newcounter{NumroExo}

\newcommand{\exo}[1][]{
   \stepcounter{NumroExo}
   \par\noindent \textbf{Exercice\(^{#1}\) \arabic{NumroExo} -- }
}

\newcommand{\exod}[1][]{
   \stepcounter{NumroExo}
   \par\noindent \textbf{(*)Exercice\(^{#1}\) \arabic{NumroExo} -- }
}
